<Window x:Class="Project.InfProducerWinsow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="InfProducerWinsow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ProducersDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="ReButton" Content="Изменить" FontSize="20" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="145" Height="50" Margin="170,0,0,0" Click="ReButton_Click"/>
        <Button x:Name="DelButton" Content="Удалить" FontSize="20" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Width="145" Height="50" Margin="0,0,170,0" Click="DelButton_Click"/>

    </Grid>
</Window>
